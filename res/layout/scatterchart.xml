<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/scatterLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zeitdata="http://schemas.android.com/apk/res/zeitdata.chart.sample"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">


    <ImageView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:paddingLeft="85dp"
            android:paddingRight="85dp"
            android:src="@drawable/zd_logo_lg"
            android:background="#20B2EB"/>

    <TextView
            android:id="@+id/reportingHeaderLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="CHARTS"
            android:textColor="#FFFFFF"
            android:paddingBottom="5sp"
            android:paddingTop="0sp"
            android:paddingLeft="0sp"
            android:paddingRight="90sp"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="#20B2EB"/>

    <!--
    <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Back to All Chart Types"/>
    -->


    <zeitdata.chart.view.ScatterChart
            android:id="@+id/scatterChartStatic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zeitdata:backgroundColor="@color/light_gray"
            zeitdata:chartLabel="Asthma Attacks (Scatter Chart)"
            zeitdata:xAxisLabel="Week of Year"
            zeitdata:yAxisLabel="Number of Attacks"
            zeitdata:numericDataPrototype="Asthma Attacks=[(3,40),(4,12),(6,69),(20,4),(42,18)]"
    />

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="---nice description  text-----"
            android:paddingBottom="10dp"
    />


    <zeitdata.chart.view.ScatterChart
            android:id="@+id/scatterChartDynamicData"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zeitdata:backgroundColor="@color/light_gray"
            zeitdata:chartLabel="Creature Sightings (Scatter Chart)"
            zeitdata:xAxisLabel="Year"
            zeitdata:yAxisLabel="Number of Sightings"
    />

</LinearLayout>